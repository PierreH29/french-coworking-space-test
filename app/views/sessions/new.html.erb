<div class="centered" style="background-image: linear-gradient(-225deg, rgba(0,0,0,0.4) 0%, rgba(0,0,0,0.4) 50%), url('https://unsplash.com/photos/1m2LQEonm2A'); background-size: cover">
  <%= render 'shared/navbar' %>

  <div class="row">
    <div class="col-sm">
      <%= simple_form_for @user, url: login_path do |f| %>
        <%= f.input :email %>
        <%= f.input :password, required: true %>
        <%= f.submit 'Login', class: 'btn btn-info' %>
      <% end %>
    </div>
  </div>


</div>
